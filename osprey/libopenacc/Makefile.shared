CC = gcc

CFLAGS = -fPIC -Wall -g
INCL = -I. -I/opt/cuda/5.0/include
OPT = -O3

DYNAMIC_LIBS = -lcuda -lcudart
LIBS = -L/opt/cuda/5.0/lib64 $(DYNAMIC_LIBS)

LD = gcc
LDFLAGS = -g -shared

TARGET = libOpenACC.so

SRCDIR = .
#SRCS = $(wildcard $(SRCDIR)/*.c)
SRCS = acc_context.c acc_data.c acc_kernel.c  acc_util.c hashmap.c vector.c 
OBJS = $(patsubst %.c, %.o, $(SRCS))

all: $(TARGET)

$(TARGET): $(OBJS)
	$(LD) $(LDFLAGS) $^ -o $@ $(LIBS)
	@rm -f *.o

%.o: %.c
	$(CC) $(CFLAGS) $(OPT) $(INCL) -c $< -o $@

clean:
	@rm -f *.o
